# Production Environment Variables Template
# Copy this file and configure for your production environment

# ============================================
# CRITICAL: Security Keys (REQUIRED)
# ============================================

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# ============================================
# Application Configuration
# ============================================

# Your production domain (e.g., https://yourdomain.com)
NEXTAUTH_URL=https://yourdomain.com

# Server port (Plesk will assign this, usually 4000 or auto-assigned)
PORT=4000

# Node environment
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================

# PostgreSQL/MySQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?schema=public

# ============================================
# Meta/Facebook API Configuration
# ============================================

META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_REDIRECT_URI=https://yourdomain.com/api/auth/callback/facebook

# Graph API version
GRAPH_API_VERSION=v21.0

# ============================================
# Google AI Configuration
# ============================================

GOOGLE_GENAI_API_KEY=your-google-ai-api-key

# ============================================
# AWS S3 Configuration (for file uploads)
# ============================================

AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-bucket-name

# ============================================
# Redis Cache Configuration (Optional)
# ============================================

UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# ============================================
# Stripe Payment Configuration (Optional)
# ============================================

STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Email Configuration (Optional)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
